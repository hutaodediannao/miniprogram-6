<!--index.wxml-->
<header titleContent="{{title}}" hidden="{{false}}" backgroundColor="{{bg}}"></header>
<scroll-view class="scrollarea" scroll-y type="list" style="width: 100%; height: {{pageHeight}}px;">

 <view style="margin-top: 50px;">
    <button type="primary" bind:tap="handle" class="btn">按钮测试</button>
    <button type="primary"  bind:tap="toTipsPage" class="btn">视图容器</button>
    <button type="primary" bind:tap="toScrollPage" class="btn">滑动页面</button>
    <button type="primary" bind:tap="viewMeasure" class="btn">拍照图片预览</button>
    <button type="primary" bind:tap="toQrCode" class="btn">扫描二维码</button>
    <button type="primary" bind:tap="wxApi" class="btn">微信个人信息API调用</button>
    <button type="primary" bind:tap="cssPage" class="btn">微信less样式调试</button>
 </view>

</scroll-view>
